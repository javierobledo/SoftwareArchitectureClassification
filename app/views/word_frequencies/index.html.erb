<p id="notice"><%= notice %></p>

<h1>Word Frequencies</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Frequency</th>
      <th>Cluster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_frequencies.each do |word_frequency| %>
      <tr>
        <td><%= word_frequency.content %></td>
        <td><%= word_frequency.frequency %></td>
        <td><%= word_frequency.cluster %></td>
        <td><%= link_to 'Show', word_frequency %></td>
        <td><%= link_to 'Edit', edit_word_frequency_path(word_frequency) %></td>
        <td><%= link_to 'Destroy', word_frequency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word Frequency', new_word_frequency_path %>
