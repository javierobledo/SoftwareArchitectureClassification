<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @algorithm.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @algorithm.description %>
</p>

<p>
  <strong>Doi:</strong>
  <%= @algorithm.DOI %>
</p>

<h1>Parameters</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Typeof</th>
    <th>Default</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @algorithm.parameters.each do |parameter| %>
    <tr>
      <td><%= parameter.name %></td>
      <td><%= parameter.typeof %></td>
      <td><%= parameter.default %></td>
      <td><%= link_to 'Show', parameter %></td>
      <td><%= link_to 'Edit', edit_parameter_path(parameter) %></td>
      <td><%= link_to 'Destroy', parameter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_algorithm_path(@algorithm) %> |
